{
  "scripts": {
    "dev": "run-p dev:*",
    "dev:webpack": "webpack --watch",
    "dev:tw": "tailwindcss -i tailwind.in.css -o ./src/tailwind.out.css --watch",
    "prepare": "husky install",
    "build": "run-s -c build:*",
    "build:tw": "tailwindcss -i tailwind.in.css -o ./src/tailwind.out.css",
    "build:webpack": "webpack --mode production",
    "build:pack": "zip -r dist/hisotry-trimer.zip assets lib pages src manifest.json"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "flowbite": "^1.6.5"
  }
}
